
<div class="row">
    {{#each reservations}}
    <div class="col-md-4">
        <hr class="my-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center" >
                    {{park_name}} <a href="/reservations/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <h5>Estado: {{status}}</h5>
                <p id="fech">Hora y fecha: {{input_date}}</p>
                <p>Última modificación: {{updatedAt}}</p>
                
                <form action="/reservations/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                    ELIMINAR
                    </button>
                </form>
            </div>
        </div>

    </div>
    {{else}}

        <div class="card mx-auto">
            <div class="card-body">
                <h1>Bienvenido {{user.name}}</h1>
                <p class="lead">No hay reservaciones aún</p> 
                <a href="/reservations/add" class="btn btn-success btn-block">CREA 1</a>
            </div>
        </div>
    {{/each}}

</div>