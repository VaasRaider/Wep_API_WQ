<div class="animate__animated animate__fadeIn row">
<div class="col-md-10 mx-auto">

    <div class="card">
        <div class="card-header">
             <h3 style="text-align:center;">Bienvenido {{user.name}}</h3>
             </div>
               <div class="card-body">
                   <div class="container-fluid" id="map-template"></div>

                    <script src="/js/map_edit_main.js"></script>                 

                   {{#each notes}}

                        <script>

                             L.marker( [{{description}}], {icon: parkIcon} ).addTo(map)
                             .bindPopup('{{title}}');  
                                   
                        </script>

                     {{/each}}
                      
                    <hr class="my-4">
                   <form action="/notes/new-note" method="POST">

                        
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Nombre" autofocus>
                     
                </div>
                <div class="form-group">
                    <input type="text" name="topic" class="form-control" placeholder="Topic">
                     
                </div>
                <div class="form-group">
                    <textarea id ="new_coor" name="description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                    <hr class="my-1">
                    <a href="/notes" class="btn btn-secondary btn-block" role="button" aria-pressed="true">Cancelar</a>
                    
                </div>
            </form>
        
    
        </div>
 
</div>
</div>
 </div>  

