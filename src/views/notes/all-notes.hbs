
<div class="row">
    {{#each notes}}
    <div class="col-md-4">
        <hr class="my-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center" >
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>Topic: {{topic}}</p>
                <p>Coordenadas: {{description}}</p>
                <p>Última modificación: {{updatedAt}}</p>    
                
                <div class="form-group">
                    
                    <a href="/notes/show" class="btn btn-info btn-block" role="button" aria-pressed="true">Registros</a>
                    <hr class="my-1">
                    
                </div>
                
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                    ELIMINAR
                    </button>
                </form>
            
                
               
            
                </div>
        </div>

    </div>
    {{else}}

        <div class="card mx-auto">
            <div class="card-body">
                <h1>Bienvenido {{user.name}}</h1>
                <p class="lead">No existen estaciones registradas aún</p> 
                <a href="/notes/add" class="btn btn-success btn-block">CREA 1</a>
            </div>
        </div>
    {{/each}}

</div>